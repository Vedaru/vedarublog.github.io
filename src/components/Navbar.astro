---
import { Icon } from "astro-icon/components";
import { navBarConfig, siteConfig } from "../config";
import { LinkPresets } from "../constants/link-presets";
import { LinkPreset, type NavBarLink } from "../types/config";
import { url } from "../utils/url-utils";
import LayoutSwitchButton from "./LayoutSwitchButton.svelte";
import LightDarkSwitch from "./LightDarkSwitch.svelte";
import MobileTOC from "./MobileTOC.svelte";
import Search from "./Search.svelte";
import WallpaperSwitch from "./WallpaperSwitch.svelte";
import DisplaySettings from "./widget/DisplaySettings.svelte";
import DropdownMenu from "./widget/DropdownMenu.astro";
import NavMenuPanel from "./widget/NavMenuPanel.astro";

const className = Astro.props.class;

// 获取导航栏透明模式配置
const navbarTransparentMode =
    siteConfig.banner?.navbar?.transparentMode || "semi";

// 获取整体布局方案切换按钮显示设置
const modeSwitchDisplay =
    siteConfig.wallpaperMode?.showModeSwitchOnMobile || "desktop";

// 检查是否为首页
const isHomePage = Astro.url.pathname === "/" || Astro.url.pathname === "";

let links: NavBarLink[] = navBarConfig.links.map(
    (item: NavBarLink | LinkPreset): NavBarLink => {
        if (typeof item === "number") {
            return LinkPresets[item];
        }
        return item;
    },
);

---

<div id="navbar" class="z-50" data-transparent-mode={navbarTransparentMode} data-is-home={isHomePage}>
    <div class="absolute h-8 left-0 right-0 -top-8 bg-[var(--card-bg)]"></div>
    <div class:list={[className, "!overflow-visible max-w-[var(--page-width)] h-[4.5rem] mx-auto flex items-center justify-between px-4"]}>
        <a href={url('/')} class="btn-plain scale-animation rounded-lg h-[3.25rem] px-5 font-bold active:scale-95">
            <div class="flex flex-row items-center text-md">
                {siteConfig.navbarTitle ? (
                    <span class="flex items-center">
                        <img src={url(siteConfig.navbarTitle.icon || "/assets/home/home.png")} alt={siteConfig.navbarTitle.text} width="28" height="28" class="h-[1.75rem] w-[1.75rem] mb-1 mr-2 object-contain rounded-lg" loading="lazy" />
                        <span class="dark:text-white text-black">{siteConfig.navbarTitle.text}</span>
                    </span>
                ) : (
                    <span class="flex items-center">
                        <Icon name="material-symbols:home-pin-outline" class="text-[1.75rem] mb-1 mr-2" />
                        <span class="dark:text-white text-black">{siteConfig.title}</span>
                    </span>
                )}
            </div>
        </a>
        <div class="hidden md:flex items-center space-x-1">
            {links.map((l) => {
                return <DropdownMenu link={l} />;
            })}
        </div>
        <div class="flex">
            <Search client:only="svelte"></Search>
            {siteConfig.toc.enable && <MobileTOC client:only="svelte"></MobileTOC>}
            {!siteConfig.themeColor.fixed && (
                    <button aria-label="Display Settings" class="btn-plain scale-animation rounded-lg h-11 w-11 active:scale-90" id="display-settings-switch">
                        <Icon name="material-symbols:palette-outline" class="text-[1.25rem]"></Icon>
                    </button>
            )}
            <LayoutSwitchButton client:only="svelte" currentLayout={siteConfig.postListLayout.defaultMode}></LayoutSwitchButton>
            <div class:list={[
                modeSwitchDisplay === "off" ? "hidden" :
                modeSwitchDisplay === "mobile" ? "block md:hidden" :
                modeSwitchDisplay === "desktop" ? "hidden md:block" :
                modeSwitchDisplay === "both" ? "block" : "hidden md:block"
            ]}>
                <WallpaperSwitch client:only="svelte"></WallpaperSwitch>
            </div>
            <button aria-label="Show Pio" class="hidden md:inline-flex btn-plain scale-animation rounded-lg w-11 h-11 active:scale-90" id="pio-show-switch">
                <Icon name="material-symbols:smart-toy-outline" class="text-[1.25rem]"></Icon>
            </button>
            <button aria-label="Show Announcement" class="btn-plain scale-animation rounded-lg w-11 h-11 active:scale-90 hidden" id="announcement-show-switch" onclick="showAnnouncement()">
                <Icon name="material-symbols:notifications-outline" class="text-[1.25rem]"></Icon>
            </button>
            <LightDarkSwitch client:only="svelte"></LightDarkSwitch>
            <button aria-label="Menu" name="Nav Menu" class="btn-plain scale-animation rounded-lg w-11 h-11 active:scale-90 md:!hidden" id="nav-menu-switch">
                <Icon name="material-symbols:menu-rounded" class="text-[1.25rem]"></Icon>
            </button>
        </div>
        <NavMenuPanel links={links}></NavMenuPanel>
        <DisplaySettings client:only="svelte"></DisplaySettings>
    </div>
</div>

<script>
async function loadButtonScript() {
    try {
        const panelManager = (window as Record<string, any>).panelManager;

        // 设置 Display Settings 按钮
        const settingBtn = document.getElementById("display-settings-switch");
        if (settingBtn) {
            if (panelManager && typeof panelManager.togglePanel === 'function') {
                settingBtn.onclick = async () => {
                    await panelManager.togglePanel('display-setting');
                };
            } else {
                settingBtn.onclick = () => {
                    const settingPanel = document.getElementById('display-setting');
                    if (settingPanel) settingPanel.classList.toggle('float-panel-closed');
                };
            }
        }

        // 设置 Nav Menu 按钮
        const menuBtn = document.getElementById("nav-menu-switch");
        if (menuBtn) {
            if (panelManager && typeof panelManager.togglePanel === 'function') {
                menuBtn.onclick = async () => { await panelManager.togglePanel('nav-menu-panel'); };
            } else {
                menuBtn.onclick = () => { const menuPanel = document.getElementById('nav-menu-panel'); if (menuPanel) menuPanel.classList.toggle('float-panel-closed'); };
            }
        }

        // Pio 按钮：稳定的显示/隐藏逻辑，带重试与强制覆盖样式
        const pioBtn = document.getElementById('pio-show-switch');
        if (pioBtn) {
            try {
                if (window.matchMedia && !window.matchMedia('(min-width: 768px)').matches) {
                    pioBtn.style.display = 'none';
                } else {
                    pioBtn.onclick = () => {
                        try { if (pioBtn instanceof HTMLButtonElement) pioBtn.disabled = true; } catch (e) {}
                        setTimeout(() => { try { if (pioBtn instanceof HTMLButtonElement) pioBtn.disabled = false; } catch (e) {} }, 700);
                        try {
                            const p = document.querySelector('.pio-container');
                            const isVisible = isPioVisible(p);
                            console.log('[NAVBAR] Pio button clicked, isVisible=', !!isVisible);
                            if (isVisible) {
                                try { localStorage.setItem('posterGirl', '0'); } catch (e) {}
                                try { delete (window as any).__pendingPioShow; } catch (e) {}
                                window.dispatchEvent(new CustomEvent('pio:hide'));
                                try {
                                    if (p && p instanceof HTMLElement) {
                                        p.classList.add('hidden');
                                        p.classList.remove('visible-manual');
                                        p.style.display = 'none';
                                        p.style.opacity = '0';
                                        p.style.pointerEvents = 'none';
                                    }
                                } catch (e) {}
                            } else {
                                try { localStorage.setItem('posterGirl', '1'); } catch (e) {}
                                try { (window as any).__pendingPioShow = true; } catch (e) {}
                                const dispatchShow = () => { try { window.dispatchEvent(new CustomEvent('pio:show')); } catch (e) {} };
                                dispatchShow(); setTimeout(dispatchShow, 200); setTimeout(dispatchShow, 600);
                                try {
                                    if (p && p instanceof HTMLElement) {
                                        p.classList.remove('hidden');
                                        p.classList.add('visible-manual');
                                        p.classList.add('visible-manual-strong');
                                        p.style.display = 'block';
                                        p.style.visibility = 'visible';
                                        p.style.opacity = '1';
                                        p.style.pointerEvents = 'auto';
                                    }
                                } catch (e) {}
                                try {
                                    let forceTries = 0;
                                    const forceInterval = setInterval(() => {
                                        forceTries++;
                                        try {
                                            const el = document.querySelector('.pio-container');
                                            if (el && el instanceof HTMLElement) {
                                                el.classList.remove('hidden');
                                                el.classList.add('visible-manual-strong');
                                                el.style.display = 'block';
                                                el.style.visibility = 'visible';
                                                el.style.opacity = '1';
                                                el.style.pointerEvents = 'auto';
                                            }
                                        } catch (e) {}
                                        if (forceTries > 10) clearInterval(forceInterval);
                                    }, 100);
                                } catch (e) {}
                            }
                        } catch (e) { /* ignore */ }
                    };
                }
            } catch (e) {
                // matchMedia 相关错误：回退到简单绑定
                pioBtn.onclick = () => {
                    try { if (pioBtn instanceof HTMLButtonElement) pioBtn.disabled = true; } catch (e) {}
                    setTimeout(() => { try { if (pioBtn instanceof HTMLButtonElement) pioBtn.disabled = false; } catch (e) {} }, 700);
                    try {
                        const p = document.querySelector('.pio-container');
                        const isVisible = isPioVisible(p);
                        if (isVisible) {
                            try { localStorage.setItem('posterGirl', '0'); } catch (e) {}
                            window.dispatchEvent(new CustomEvent('pio:hide'));
                            try { if (p && p instanceof HTMLElement) { p.classList.add('hidden'); p.classList.remove('visible-manual'); p.style.display='none'; p.style.opacity='0'; p.style.pointerEvents='none'; } } catch (e) {}
                        } else {
                            try { localStorage.setItem('posterGirl', '1'); } catch (e) {}
                            window.dispatchEvent(new CustomEvent('pio:show'));
                            try { if (p && p instanceof HTMLElement) { p.classList.remove('hidden'); p.classList.add('visible-manual'); p.style.display='block'; p.style.opacity='1'; p.style.pointerEvents='auto'; } } catch (e) {}
                        }
                    } catch (e) { /* ignore */ }
                };
            }
        }

    } catch (error) {
        console.error('Failed to load panel manager:', error);
        // 最小回退：只绑定必要的按钮行为
        const settingBtn = document.getElementById("display-settings-switch");
        if (settingBtn) settingBtn.onclick = () => { const settingPanel = document.getElementById('display-setting'); if (settingPanel) settingPanel.classList.toggle('float-panel-closed'); };
        const menuBtn = document.getElementById("nav-menu-switch");
        if (menuBtn) menuBtn.onclick = () => { const menuPanel = document.getElementById('nav-menu-panel'); if (menuPanel) menuPanel.classList.toggle('float-panel-closed'); };
        const pioBtn = document.getElementById('pio-show-switch');
        if (pioBtn) pioBtn.onclick = () => { try { if (pioBtn instanceof HTMLButtonElement) pioBtn.disabled = true; } catch (e) {} try { window.dispatchEvent(new CustomEvent('pio:show')); } catch (e) {} setTimeout(() => { try { if (pioBtn instanceof HTMLButtonElement) pioBtn.disabled = false; } catch (e) {} }, 700); };
    }
}

// 更稳健的 Pio 可见性检测，避免依赖易变的行内 style/opacity
function isPioVisible(el) {
    try {
        if (!el || !(el instanceof HTMLElement)) return false;
        // 显式的可见类优先判定
        if (el.classList.contains('visible-manual') || el.classList.contains('visible-manual-strong')) return true;
        // 明确的 hidden 类表示不可见
        if (el.classList.contains('hidden')) return false;
        // 回退到计算样式，但更严格地同时检查 display/visibility/opacity
        const s = getComputedStyle(el);
        if (!s) return false;
        if (s.display === 'none' || s.visibility === 'hidden') return false;
        const op = parseFloat(s.opacity || '1');
        if (isNaN(op) || op <= 0) return false;
        return true;
    } catch (e) {
        return false;
    }
}

if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadButtonScript);
} else {
    loadButtonScript();
}

// 为semifull模式添加滚动检测逻辑
function initSemifullScrollDetection() {
    const navbar = document.getElementById('navbar');
    if (!navbar) return;
    
    const transparentMode = navbar.getAttribute('data-transparent-mode');
    if (transparentMode !== 'semifull') return;
    
    const isHomePage = navbar.getAttribute('data-is-home') === 'true';
    
    // 如果不是首页，移除滚动事件监听器并设置为半透明状态
    if (!isHomePage) {
        // 移除之前的滚动事件监听器（如果存在）
        // @ts-ignore
        if (window.semifullScrollHandler) {
            // @ts-ignore
            window.removeEventListener('scroll', window.semifullScrollHandler);
            // @ts-ignore
            window.semifullScrollHandler = null;
        }
        // 设置为半透明状态
        navbar.classList.add('scrolled');
        return;
    }
    
    // 移除现有的scrolled类，重置状态
    navbar.classList.remove('scrolled');
    
    let ticking = false;
    
    function updateNavbarState() {
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        const threshold = 50; // 滚动阈值，可以根据需要调整
        
        if (navbar && scrollTop > threshold) {
            navbar.classList.add('scrolled');
        } else if (navbar) {
            navbar.classList.remove('scrolled');
        }
        
        ticking = false;
    }
    
    function requestTick() {
        if (!ticking) {
            requestAnimationFrame(updateNavbarState);
            ticking = true;
        }
    }
    
    // 移除之前的滚动事件监听器（如果存在）
    // @ts-ignore
    if (window.semifullScrollHandler) {
        // @ts-ignore
        window.removeEventListener('scroll', window.semifullScrollHandler);
    }
    
    // 保存新的事件处理器引用
    // @ts-ignore
    window.semifullScrollHandler = requestTick;
    
    // 监听滚动事件
    window.addEventListener('scroll', requestTick, { passive: true });
    
    // 初始化状态
    updateNavbarState();
}

// 将函数暴露到全局对象，供页面切换时调用
// @ts-ignore
window.initSemifullScrollDetection = initSemifullScrollDetection;

// 页面加载完成后初始化滚动检测
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSemifullScrollDetection);
} else {
    initSemifullScrollDetection();
}
</script>

{import.meta.env.PROD && <script is:inline define:vars={{scriptUrl: url('/pagefind/pagefind.js')}}>
async function loadPagefind() {
    try {
        const response = await fetch(scriptUrl, { method: 'HEAD' });
        if (!response.ok) {
            throw new Error(`Pagefind script not found: ${response.status}`);
        }

        const pagefind = await import(scriptUrl);

        await pagefind.options({
            excerptLength: 20
        });

        window.pagefind = pagefind;

        document.dispatchEvent(new CustomEvent('pagefindready'));
        console.log('Pagefind loaded and initialized successfully, event dispatched.');
    } catch (error) {
        console.error('Failed to load Pagefind:', error);
        window.pagefind = {
            search: () => Promise.resolve({ results: [] }),
            options: () => Promise.resolve(),
        };
        document.dispatchEvent(new CustomEvent('pagefindloaderror'));
        console.log('Pagefind load error, event dispatched.');
    }
}

if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadPagefind);
} else {
    loadPagefind();
}
</script>}
