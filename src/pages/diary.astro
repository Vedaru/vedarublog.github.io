<script is:inline>
	window.__diaryState = {
		expanded: false,
		processing: false
	};

	window.updateButtonState = function() {
		var btn = document.getElementById('expand-all-diaries');
		if (!btn) return;

		var yearGroups = document.querySelectorAll('.moment-group');
		var subgroups = document.querySelectorAll('.moment-subgroup');

		// æ£€æŸ¥æ‰€æœ‰å¹´ä»½æ˜¯å¦éƒ½å±•å¼€
		var allYearsOpen = Array.from(yearGroups).every(function(group) {
			return group.hasAttribute('open');
		});

		// æ£€æŸ¥æ‰€æœ‰æœˆä»½æ˜¯å¦éƒ½å±•å¼€
		var allSubgroupsOpen = Array.from(subgroups).every(function(subgroup) {
			return subgroup.hasAttribute('open');
		});

		var originalText = btn.getAttribute('data-original-text') || 'æ˜¾ç¤ºå…¨éƒ¨æ—¥è®°';
		var collapseText = btn.getAttribute('data-collapse-text') || 'æŠ˜å å…¨éƒ¨æ—¥è®°';

		// åªæœ‰å½“æ‰€æœ‰å¹´ä»½å’Œæœˆä»½éƒ½å±•å¼€æ—¶ï¼Œæ‰æ˜¾ç¤ºæŠ˜å æŒ‰é’®
		var allExpanded = allYearsOpen && allSubgroupsOpen && subgroups.length > 0;
		window.__diaryState.expanded = allExpanded;
		btn.textContent = allExpanded ? collapseText : originalText;
	};

	window.setupDiaryExpand = function() {
		var btn = document.getElementById('expand-all-diaries');
		if (!btn) return;

		var originalText = btn.textContent.trim();
		btn.setAttribute('data-original-text', originalText);
		var collapseText = btn.getAttribute('data-collapse-text') || 'æŠ˜å å…¨éƒ¨æ—¥è®°';

		btn.onclick = function(e) {
			e.preventDefault();
			e.stopPropagation();
			
			var state = window.__diaryState;
			if (state.processing) return;

			state.processing = true;
			btn.disabled = true;
			btn.style.opacity = '0.6';
			btn.style.cursor = 'wait';
			
			var shouldOpen = !state.expanded;
			var yearGroups = document.querySelectorAll('.moment-group');
			
			if (!yearGroups.length) {
				state.processing = false;
				btn.disabled = false;
				btn.style.opacity = '1';
				btn.style.cursor = 'pointer';
				return;
			}

			// ç¦ç”¨è¿‡æ¸¡åŠ¨ç”»ä»¥æé«˜æ€§èƒ½
			var style = document.createElement('style');
			style.textContent = '.moment-group, .moment-subgroup { transition: none !important; }';
			document.head.appendChild(style);

			var i = 0;
			var processNext = function() {
				if (i >= yearGroups.length) {
					// æ¢å¤è¿‡æ¸¡åŠ¨ç”»
					style.remove();
					
					state.expanded = shouldOpen;
					state.processing = false;
					btn.disabled = false;
					btn.style.opacity = '1';
					btn.style.cursor = 'pointer';
					btn.textContent = shouldOpen ? collapseText : originalText;
					return;
				}

				var group = yearGroups[i];
				if (shouldOpen) {
					group.setAttribute('open', '');
				} else {
					group.removeAttribute('open');
				}

				var subgroups = group.querySelectorAll('.moment-subgroup');
				for (var j = 0; j < subgroups.length; j++) {
					var sg = subgroups[j];
					if (shouldOpen) {
						sg.setAttribute('open', '');
					} else {
						sg.removeAttribute('open');
					}
				}

				i++;
				requestAnimationFrame(processNext);
			};

			processNext();
		};

		// ä¸ºæ‰€æœ‰detailså…ƒç´ æ·»åŠ toggleäº‹ä»¶ç›‘å¬
		var allDetails = document.querySelectorAll('.moment-group, .moment-subgroup');
		allDetails.forEach(function(detail) {
			detail.addEventListener('toggle', function() {
				// å»¶è¿Ÿè°ƒç”¨ï¼Œé¿å…é¢‘ç¹æ›´æ–°
				clearTimeout(detail._updateTimeout);
				detail._updateTimeout = setTimeout(window.updateButtonState, 100);
			});
		});

		btn.textContent = originalText;
		btn.style.cursor = 'pointer';
		window.updateButtonState();
	};

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', window.setupDiaryExpand);
	} else {
		setTimeout(window.setupDiaryExpand, 0);
	}

	document.addEventListener('swup:content:replace', function() {
		window.__diaryState.expanded = false;
		window.__diaryState.processing = false;
		setTimeout(window.setupDiaryExpand, 100);
	});
</script>

