	window.__diaryState = {
		expanded: false,
		processing: false,
		selectedYear: null,
		selectedMonth: null
	};

	window.initDiarySelector = function() {
		const yearList = document.getElementById('year-list');
		const monthList = document.getElementById('month-list');
		const collapseBtn = document.getElementById('collapse-all-diaries');
		
		if (!yearList || !monthList) return;

		// è·å–æ‰€æœ‰å¹´ä»½
		const allYears = Array.from(yearList.querySelectorAll('.year-item'));
		if (allYears.length === 0) return;

		// åˆå§‹ä¸é€‰ä¸­ä»»ä½•å¹´ä»½ï¼Œç­‰å¾…ç”¨æˆ·ç‚¹å‡»åå†å±•ç¤ºæ—¥è®°
		window.__diaryState.selectedYear = null;
		window.__diaryState.selectedMonth = null;
		monthList.innerHTML = '';
		if (collapseBtn) collapseBtn.classList.add('hidden');

		function resetAllDiaries() {
			const groups = document.querySelectorAll('.moment-group');
			groups.forEach(g => {
				g.classList.remove('visible');
				g.style.display = 'none';
				g.removeAttribute('open');
				g.querySelectorAll('.moment-subgroup').forEach(sg => {
					sg.style.display = 'none';
					sg.removeAttribute('open');
				});
			});
			monthList.innerHTML = '';
			allYears.forEach(y => y.classList.remove('active'));
			window.__diaryState.selectedYear = null;
			window.__diaryState.selectedMonth = null;
			if (collapseBtn) collapseBtn.classList.add('hidden');
		}

		if (collapseBtn) {
			collapseBtn.addEventListener('click', function() {
				resetAllDiaries();
			});
		}

		// å¹´ä»½é€‰æ‹©äº‹ä»¶
		allYears.forEach(yearItem => {
			yearItem.addEventListener('click', function() {
				const yearAttr = this.getAttribute('data-year');
				const year = yearAttr === 'all' ? 'all' : parseInt(yearAttr || '0', 10);
				
				// ç§»é™¤æ‰€æœ‰å¹´ä»½çš„activeç±»
				allYears.forEach(y => y.classList.remove('active'));
				this.classList.add('active');
				
				window.__diaryState.selectedYear = year;
				window.__diaryState.selectedMonth = null;
				
				// æ›´æ–°æœˆä»½åˆ—è¡¨
				updateMonthList(year);
				
				// æ›´æ–°æ˜¾ç¤ºçš„æ—¥è®°
				filterDiariesByYearMonth(year, null);
				if (collapseBtn) {
					if (year === 'all') {
						collapseBtn.classList.remove('hidden');
					} else {
						collapseBtn.classList.add('hidden');
					}
				}
			});
		});
	};

	function updateMonthList(year) {
		const monthList = document.getElementById('month-list');
		if (!monthList) return;

		// æ¸…ç©ºæœˆä»½åˆ—è¡¨
		monthList.innerHTML = '';

		// é€‰æ‹©å…¨éƒ¨å¹´ä»½æ—¶ä¸å±•ç¤ºæœˆä»½ç­›é€‰
		if (year === 'all') return;

		// ä»DOMä¸­æŸ¥æ‰¾è¯¥å¹´ä»½å¯¹åº”çš„æ‰€æœ‰æœˆä»½
		const yearGroup = document.querySelector(`#year-${year}`);
		if (!yearGroup) return;

		const monthSubgroups = yearGroup.querySelectorAll('.moment-subgroup');
		
		// æœˆä»½ç¼©å†™æ˜ å°„
		const monthNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
		
		// å…ˆè®¡ç®—æ‰€æœ‰æœˆä»½çš„æ€»æ•°
		const monthsMap = new Map();
		monthSubgroups.forEach(subgroup => {
			const monthId = subgroup.id; // format: month-YYYY-MM
			const monthPart = monthId.split('-').pop(); // è·å–MM
			if (monthPart) {
				if (!monthsMap.has(monthPart)) {
					monthsMap.set(monthPart, 0);
				}
				// è®¡ç®—è¯¥æœˆçš„æ—¥è®°æ•°
				const itemCount = subgroup.querySelectorAll('.moment-item').length;
				monthsMap.set(monthPart, monthsMap.get(monthPart) + itemCount);
			}
		});
		
		// åˆ›å»º"å…¨éƒ¨"é€‰é¡¹
		const totalCount = Array.from(monthsMap.values()).reduce((sum, count) => sum + count, 0);
		const allOption = document.createElement('div');
		allOption.className = 'selector-item year-item';
		allOption.setAttribute('data-month', 'all');
		allOption.innerHTML = `<span class="item-label">å…¨éƒ¨</span><span class="item-count">(${totalCount})</span>`;
		monthList.appendChild(allOption);

		// æŒ‰æœˆä»½æ’åºå¹¶æ·»åŠ åˆ°åˆ—è¡¨
		Array.from(monthsMap.entries())
			.sort(([a], [b]) => a.localeCompare(b))
			.forEach(([month, count]) => {
				const monthItem = document.createElement('div');
				monthItem.className = 'selector-item year-item';
				monthItem.setAttribute('data-month', month);
				const monthIndex = parseInt(month, 10) - 1;
				const monthLabel = monthNames[monthIndex] || month;
				monthItem.innerHTML = `<span class="item-label">${monthLabel}</span><span class="item-count">(${count})</span>`;
				monthList.appendChild(monthItem);
			});

		// ä¸ºæ‰€æœ‰æœˆä»½é¡¹æ·»åŠ ç‚¹å‡»äº‹ä»¶
		const monthItems = monthList.querySelectorAll('.selector-item');
		monthItems.forEach((item, index) => {
			item.addEventListener('click', function(e) {
				e.stopPropagation();
				const month = this.getAttribute('data-month');
				const year = window.__diaryState.selectedYear;
				
				// ç§»é™¤æ‰€æœ‰æœˆä»½çš„activeç±»
				monthItems.forEach(m => m.classList.remove('active'));
				this.classList.add('active');
				
				window.__diaryState.selectedMonth = month === 'all' ? null : month;
				filterDiariesByYearMonth(year, window.__diaryState.selectedMonth);
			});
			
			// é»˜è®¤é€‰ä¸­ç¬¬ä¸€ä¸ªï¼ˆå…¨éƒ¨ï¼‰
			if (index === 0) {
				item.classList.add('active');
				window.__diaryState.selectedMonth = null;
			}
		});
	}

	function toggleSelector(show) {
		const selector = document.querySelector('.diary-selector');
		if (!selector) return;
		
		if (show) {
			selector.classList.remove('collapsed');
		} else {
			selector.classList.add('collapsed');
		}
	}

	function filterDiariesByYearMonth(year, month) {
		const collapseBtn = document.getElementById('collapse-all-diaries');
		const yearGroups = document.querySelectorAll('.moment-group');

		if (year === 'all') {
			// å±•ç¤ºå…¨éƒ¨å¹´ä»½ä¸æœˆä»½
			yearGroups.forEach(group => {
				group.classList.add('visible');
				group.style.display = 'block';
				group.setAttribute('open', '');
				group.querySelectorAll('.moment-subgroup').forEach(subgroup => {
					subgroup.style.display = 'block';
					subgroup.setAttribute('open', '');
				});
			});
			window.__diaryState.expanded = true;
			if (collapseBtn) collapseBtn.classList.remove('hidden');
			return;
		}

		// éšè—æ‰€æœ‰å¹´ä»½ç»„
		yearGroups.forEach(group => {
			group.removeAttribute('open');
			const groupYear = parseInt(group.id.replace('year-', ''), 10);
			if (groupYear === year) {
				group.classList.add('visible');
				group.style.display = 'block';
				group.setAttribute('open', '');
				
				// å¤„ç†æœˆä»½
				const monthSubgroups = group.querySelectorAll('.moment-subgroup');
				monthSubgroups.forEach(subgroup => {
					subgroup.removeAttribute('open');
					
					if (month === null || month === 'all') {
						// æ˜¾ç¤ºè¯¥å¹´ä»½çš„æ‰€æœ‰æœˆä»½
						subgroup.style.display = 'block';
						subgroup.setAttribute('open', '');
					} else {
						// åªæ˜¾ç¤ºé€‰ä¸­çš„æœˆä»½
						const monthId = subgroup.id; // format: month-YYYY-MM
						const monthPart = monthId.split('-').pop();
						if (monthPart === month) {
							subgroup.style.display = 'block';
							subgroup.setAttribute('open', '');
						} else {
							subgroup.style.display = 'none';
						}
					}
				});
			} else {
				group.classList.remove('visible');
				group.style.display = 'none';
			}
		});

		// åªè¦æœ‰å±•å¼€å†…å®¹å°±æ˜¾ç¤ºæŠ˜å æŒ‰é’®
		const anyVisible = Array.from(yearGroups).some(g => g.classList.contains('visible') && g.style.display !== 'none');
		window.__diaryState.expanded = anyVisible;
		if (collapseBtn) {
			if (anyVisible) {
				collapseBtn.classList.remove('hidden');
			} else {
				collapseBtn.classList.add('hidden');
			}
		}
	}

	// ç¦ç”¨detailså…ƒç´ çš„ç‚¹å‡»æŠ˜å å±•å¼€
	var allDetails = document.querySelectorAll('.moment-group, .moment-subgroup');
	allDetails.forEach(function(detail) {
		var summary = detail.querySelector('summary');
		if (summary) {
			summary.addEventListener('click', function(e) {
				e.preventDefault();
			});
		}
	});

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', function() {
			window.initDiarySelector();
		});
	} else {
		setTimeout(function() {
			window.initDiarySelector();
		}, 0);
	}

	document.addEventListener('swup:content:replace', function() {
		window.__diaryState.expanded = false;
		window.__diaryState.processing = false;
		window.__diaryState.selectedYear = null;
		window.__diaryState.selectedMonth = null;
		setTimeout(function() {
			window.initDiarySelector();
		}, 100);
	});
</script>

