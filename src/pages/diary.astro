import MainGridLayout from "../layouts/MainGridLayout.astro";

// æ£€æŸ¥æ—¥è®°é¡µé¢æ˜¯å¦å¯ç”¨
if (!siteConfig.featurePages.diary) {
	return Astro.redirect("/404/");
}

// è·å–æ—¥è®°æ•°æ®ï¼ˆæ˜¾å¼è¯·æ±‚å…¨éƒ¨æ—¥è®°ï¼Œä¸åšæ•°é‡é™åˆ¶ï¼‰
const moments = getDiaryList(Number.MAX_SAFE_INTEGER);

// æŒ‰å¹´ -> æœˆåˆ†ç»„ï¼ˆå¤–å±‚å¹´ä»½ï¼Œå†…å±‚æœˆä»½ï¼›å‡å€’åºï¼‰
const groupByYearMonth = (list: any[]) => {
	const yearMap = new Map();
	list.forEach((m: any) => {
		// ç›´æ¥ä»æ—¥æœŸå­—ç¬¦ä¸² YYYY-MM-DDTHH:MM:SS ä¸­æå–å¹´æœˆï¼Œé¿å…æ—¶åŒºåç§»
		const datePart = m.date.split('T')[0];
		const [yStr, mStr] = datePart.split('-');
		const y = parseInt(yStr, 10);
		const mth = String(parseInt(mStr, 10)).padStart(2, "0");
		if (!yearMap.has(y)) yearMap.set(y, new Map());
		const monthMap = yearMap.get(y);
		if (!monthMap.has(mth)) monthMap.set(mth, []);
		monthMap.get(mth).push(m);
	});
	// sort years desc, months desc
	return Array.from(yearMap.entries())
		.sort(
			(
				a: [number, Map<string, Record<string, unknown>>],
				b: [number, Map<string, Record<string, unknown>>],
			) => (a[0] < b[0] ? 1 : -1),
		)
		.map(([year, mMap]) => [
			year,
			Array.from(mMap.entries()).sort(
				(
					a: [string, Record<string, unknown>],
					b: [string, Record<string, unknown>],
				) => (a[0] < b[0] ? 1 : -1),
			),
		]);
};

const groupedMoments = groupByYearMonth(moments);
const diaryStats = getDiaryStats();

// æ—¶é—´æ ¼å¼åŒ–å‡½æ•°ï¼ˆç›¸å¯¹æ—¶é—´ï¼ŒåŸºäº siteConfig.timeZoneï¼‰
function formatTime(dateString: string): string {
	// ç›´æ¥ä½¿ç”¨ date å­—ç¬¦ä¸²ä¸­çš„æ—¥æœŸéƒ¨åˆ†ï¼ˆå¿½ç•¥æ—¶åŒº/æœ¬åœ°æ—¶é—´ï¼‰ï¼Œä¿è¯å±•ç¤ºä¸æ•°æ®ä¸­çš„æ—¥æœŸä¸€è‡´
	if (!dateString) return '';
	// dateString å¯èƒ½å½¢å¦‚ "YYYY-MM-DDTHH:MM:SS" æˆ–å¸¦æ—¶åŒºåç¼€ï¼Œå…ˆæŒ‰ "T" åˆ†å‰²å–æ—¥æœŸéƒ¨åˆ†
	const datePart = dateString.split('T')[0];
	const parts = datePart.split('-');
	if (parts.length < 3) return dateString;
	const monthStr = String(parts[1]).padStart(2, '0');
	const dayStr = String(parts[2]).padStart(2, '0');
	const lang = (siteConfig && siteConfig.lang) ? String(siteConfig.lang).toLowerCase() : '';
	if (lang.startsWith('zh')) {
		return `${monthStr}æœˆ${dayStr}æ—¥`;
	}
	return `${monthStr}-${dayStr}`;
}

// è¿”å›å…·ä½“æ—¶:åˆ†ï¼ˆ24 å°æ—¶åˆ¶ï¼‰ï¼Œç”¨äºå¡ç‰‡å³ä¸‹è§’æ˜¾ç¤ºï¼ˆä½¿ç”¨æœ¬åœ°æ—¶åŒºï¼‰
function formatClock(dateString: string): string {
	const d = new Date(dateString);
	const hh = String(d.getHours()).padStart(2, "0");
	const mm = String(d.getMinutes()).padStart(2, "0");
	return `${hh}:${mm}`;
}
