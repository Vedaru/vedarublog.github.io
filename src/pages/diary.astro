										<div class="moment-footer flex justify-between items-center">
											<div class="moment-time flex items-center gap-1.5 text-75 text-xs lg:text-base">
												<i class="time-icon text-xs md:text-sm">ğŸ•</i>
												<time datetime={moment.date}>
													{formatTime(moment.date)}
												</time>
											</div>
												<div class="moment-clock text-75 text-xs lg:text-base" aria-hidden>
													<time datetime={moment.date}>{formatClock(moment.date)}</time>
												</div>
										</div>
									</div>
								))}
								</div>
							</div>
