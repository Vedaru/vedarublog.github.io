<script is:inline>
	window.__diaryState = {
		expanded: false,
		processing: false,
		selectedYear: null,
		selectedMonth: null
	};

	window.initDiarySelector = function() {
		const yearList = document.getElementById('year-list');
		const monthList = document.getElementById('month-list');
		
		if (!yearList || !monthList) return;

		// è·å–æ‰€æœ‰å¹´ä»½
		const allYears = Array.from(yearList.querySelectorAll('.year-item'));
		if (allYears.length === 0) return;

		// åˆå§‹åŒ–ï¼šé€‰æ‹©ç¬¬ä¸€ä¸ªå¹´ä»½
		const firstYear = allYears[0];
		const initialYear = parseInt(firstYear.getAttribute('data-year'), 10);
		window.__diaryState.selectedYear = initialYear;
		firstYear.classList.add('active');
		updateMonthList(initialYear);

		// åˆå§‹æ˜¾ç¤ºç¬¬ä¸€ä¸ªå¹´ä»½çš„æ—¥è®°
		filterDiariesByYearMonth(initialYear, null);

		// å¹´ä»½é€‰æ‹©äº‹ä»¶
		allYears.forEach(yearItem => {
			yearItem.addEventListener('click', function() {
				const year = parseInt(this.getAttribute('data-year'), 10);
				
				// ç§»é™¤æ‰€æœ‰å¹´ä»½çš„activeç±»
				allYears.forEach(y => y.classList.remove('active'));
				this.classList.add('active');
				
				window.__diaryState.selectedYear = year;
				window.__diaryState.selectedMonth = null;
				
				// æ›´æ–°æœˆä»½åˆ—è¡¨
				updateMonthList(year);
				
				// æ›´æ–°æ˜¾ç¤ºçš„æ—¥è®°
				filterDiariesByYearMonth(year, null);
			});
		});

		// æœˆä»½åˆ—è¡¨ç‚¹å‡»äº‹ä»¶ï¼ˆåŠ¨æ€å¤„ç†ï¼‰
		monthList.addEventListener('click', function(e) {
			const monthItem = e.target.closest('.month-item');
			if (!monthItem) return;

			const month = monthItem.getAttribute('data-month');
			const year = window.__diaryState.selectedYear;

			// ç§»é™¤æ‰€æœ‰æœˆä»½çš„activeç±»
			monthList.querySelectorAll('.month-item').forEach(m => m.classList.remove('active'));
			monthItem.classList.add('active');

			window.__diaryState.selectedMonth = month;
			filterDiariesByYearMonth(year, month);
		});
	};

	function updateMonthList(year) {
		const monthList = document.getElementById('month-list');
		if (!monthList) return;

		// æ¸…ç©ºæœˆä»½åˆ—è¡¨
		monthList.innerHTML = '';

		// ä»DOMä¸­æŸ¥æ‰¾è¯¥å¹´ä»½å¯¹åº”çš„æ‰€æœ‰æœˆä»½
		const yearGroup = document.querySelector(`#year-${year}`);
		if (!yearGroup) return;

		const monthSubgroups = yearGroup.querySelectorAll('.moment-subgroup');
		
		// åˆ›å»º"å…¨éƒ¨"é€‰é¡¹
		const allOption = document.createElement('div');
		allOption.className = 'month-item selector-item';
		allOption.setAttribute('data-month', 'all');
		
		// å…ˆè®¡ç®—æ‰€æœ‰æœˆä»½çš„æ€»æ•°ï¼Œç„¶åå†åˆ›å»º"å…¨éƒ¨"é€‰é¡¹
		const monthsMap = new Map();
		monthSubgroups.forEach(subgroup => {
			const monthId = subgroup.id; // format: month-YYYY-MM
			const monthPart = monthId.split('-').pop(); // è·å–MM
			if (monthPart) {
				if (!monthsMap.has(monthPart)) {
					monthsMap.set(monthPart, 0);
				}
				// è®¡ç®—è¯¥æœˆçš„æ—¥è®°æ•°
				const itemCount = subgroup.querySelectorAll('.moment-item').length;
				monthsMap.set(monthPart, monthsMap.get(monthPart) + itemCount);
			}
		});
		
		// è®¡ç®—è¯¥å¹´ä»½çš„æ€»æ—¥è®°æ•°
		const totalCount = Array.from(monthsMap.values()).reduce((sum, count) => sum + count, 0);
		allOption.innerHTML = `<span class="item-label">å…¨éƒ¨</span><span class="item-count">(${totalCount})</span>`;
		monthList.appendChild(allOption);

		// æ·»åŠ æœˆä»½ (ä»subgroupçš„IDä¸­æå–æœˆä»½ä¿¡æ¯)
		
		// æŒ‰æœˆä»½æ’åºå¹¶æ·»åŠ åˆ°åˆ—è¡¨
		Array.from(monthsMap.entries())
			.sort(([a], [b]) => b.localeCompare(a))
			.forEach(([month, count]) => {
				const monthItem = document.createElement('div');
				monthItem.className = 'month-item selector-item';
				monthItem.setAttribute('data-month', month);
				monthItem.innerHTML = `<span class="item-label">${month}æœˆ</span><span class="item-count">(${count})</span>`;
				monthList.appendChild(monthItem);
			});

		// è‡ªåŠ¨é€‰æ‹©"å…¨éƒ¨"
		const allItems = monthList.querySelectorAll('.month-item');
		if (allItems.length > 0) {
			allItems[0].classList.add('active');
			window.__diaryState.selectedMonth = null;
		}
	}

	function toggleSelector(show) {
		const selector = document.querySelector('.diary-selector');
		if (!selector) return;
		
		if (show) {
			selector.classList.remove('collapsed');
		} else {
			selector.classList.add('collapsed');
		}
	}

	function filterDiariesByYearMonth(year, month) {
		// éšè—æ‰€æœ‰å¹´ä»½ç»„
		const yearGroups = document.querySelectorAll('.moment-group');
		yearGroups.forEach(group => {
			group.removeAttribute('open');
			const groupYear = parseInt(group.id.replace('year-', ''), 10);
			if (groupYear === year) {
				group.classList.add('visible');
				group.style.display = 'block';
				group.setAttribute('open', '');
				
				// å¤„ç†æœˆä»½
				const monthSubgroups = group.querySelectorAll('.moment-subgroup');
				monthSubgroups.forEach(subgroup => {
					subgroup.removeAttribute('open');
					
					if (month === null || month === 'all') {
						// æ˜¾ç¤ºè¯¥å¹´ä»½çš„æ‰€æœ‰æœˆä»½
						subgroup.style.display = 'block';
						subgroup.setAttribute('open', '');
					} else {
						// åªæ˜¾ç¤ºé€‰ä¸­çš„æœˆä»½
						const monthId = subgroup.id; // format: month-YYYY-MM
						const monthPart = monthId.split('-').pop();
						if (monthPart === month) {
							subgroup.style.display = 'block';
							subgroup.setAttribute('open', '');
						} else {
							subgroup.style.display = 'none';
						}
					}
				});
			} else {
				group.classList.remove('visible');
				group.style.display = 'none';
			}
		});
	}

	window.updateButtonState = function() {
		var btn = document.getElementById('expand-all-diaries');
		if (!btn) return;

		var yearGroups = document.querySelectorAll('.moment-group');
		var subgroups = document.querySelectorAll('.moment-subgroup');

		// æ£€æŸ¥æ‰€æœ‰å¹´ä»½æ˜¯å¦éƒ½å±•å¼€
		var allYearsOpen = Array.from(yearGroups).every(function(group) {
			return group.hasAttribute('open');
		});

		// æ£€æŸ¥æ‰€æœ‰æœˆä»½æ˜¯å¦éƒ½å±•å¼€
		var allSubgroupsOpen = Array.from(subgroups).every(function(subgroup) {
			return subgroup.hasAttribute('open');
		});

		var originalText = btn.getAttribute('data-original-text') || 'æ˜¾ç¤ºå…¨éƒ¨æ—¥è®°';
		var collapseText = btn.getAttribute('data-collapse-text') || 'æŠ˜å å…¨éƒ¨æ—¥è®°';

		// åªæœ‰å½“æ‰€æœ‰å¹´ä»½å’Œæœˆä»½éƒ½å±•å¼€æ—¶ï¼Œæ‰æ˜¾ç¤ºæŠ˜å æŒ‰é’®
		var allExpanded = allYearsOpen && allSubgroupsOpen && subgroups.length > 0;
		window.__diaryState.expanded = allExpanded;
		btn.textContent = allExpanded ? collapseText : originalText;
	};

	window.setupDiaryExpand = function() {
		var btn = document.getElementById('expand-all-diaries');
		if (!btn) return;

		var originalText = btn.textContent.trim();
		btn.setAttribute('data-original-text', originalText);
		var collapseText = btn.getAttribute('data-collapse-text') || 'æŠ˜å å…¨éƒ¨æ—¥è®°';

		btn.onclick = function(e) {
			e.preventDefault();
			e.stopPropagation();
			
			var state = window.__diaryState;
			if (state.processing) return;

			state.processing = true;
			btn.disabled = true;
			btn.style.opacity = '0.6';
			btn.style.cursor = 'wait';
			
			var shouldOpen = !state.expanded;
			var yearGroups = document.querySelectorAll('.moment-group');
			
			if (!yearGroups.length) {
				state.processing = false;
				btn.disabled = false;
				btn.style.opacity = '1';
				btn.style.cursor = 'pointer';
				return;
			}

			// å±•å¼€æ—¶éšè—é€‰æ‹©å™¨ï¼Œæ”¶èµ·æ—¶æ˜¾ç¤ºé€‰æ‹©å™¨
			toggleSelector(!shouldOpen);

			// ç¦ç”¨è¿‡æ¸¡åŠ¨ç”»ä»¥æé«˜æ€§èƒ½
			var style = document.createElement('style');
			style.textContent = '.moment-group, .moment-subgroup { transition: none !important; }';
			document.head.appendChild(style);

			var i = 0;
			var processNext = function() {
				if (i >= yearGroups.length) {
					// æ¢å¤è¿‡æ¸¡åŠ¨ç”»
					style.remove();
					
					state.expanded = shouldOpen;
					state.processing = false;
					btn.disabled = false;
					btn.style.opacity = '1';
					btn.style.cursor = 'pointer';
					btn.textContent = shouldOpen ? collapseText : originalText;
					return;
				}

				var group = yearGroups[i];
				if (shouldOpen) {
					group.setAttribute('open', '');
				} else {
					group.removeAttribute('open');
				}

				var subgroups = group.querySelectorAll('.moment-subgroup');
				for (var j = 0; j < subgroups.length; j++) {
					var sg = subgroups[j];
					if (shouldOpen) {
						sg.setAttribute('open', '');
					} else {
						sg.removeAttribute('open');
					}
				}

				i++;
				requestAnimationFrame(processNext);
			};

			processNext();
		};

		// ä¸ºæ‰€æœ‰detailså…ƒç´ æ·»åŠ toggleäº‹ä»¶ç›‘å¬
		var allDetails = document.querySelectorAll('.moment-group, .moment-subgroup');
		allDetails.forEach(function(detail) {
			detail.addEventListener('toggle', function() {
				// å»¶è¿Ÿè°ƒç”¨ï¼Œé¿å…é¢‘ç¹æ›´æ–°
				clearTimeout(detail._updateTimeout);
				detail._updateTimeout = setTimeout(window.updateButtonState, 100);
			});
		});

		btn.textContent = originalText;
		btn.style.cursor = 'pointer';
		window.updateButtonState();
	};

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', function() {
			window.setupDiaryExpand();
			window.initDiarySelector();
		});
	} else {
		setTimeout(function() {
			window.setupDiaryExpand();
			window.initDiarySelector();
		}, 0);
	}

	document.addEventListener('swup:content:replace', function() {
		window.__diaryState.expanded = false;
		window.__diaryState.processing = false;
		window.__diaryState.selectedYear = null;
		window.__diaryState.selectedMonth = null;
		setTimeout(function() {
			window.setupDiaryExpand();
			window.initDiarySelector();
		}, 100);
	});
</script>

