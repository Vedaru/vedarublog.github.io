---
import MainGridLayout from "../layouts/MainGridLayout.astro";
import ChatWidget from "../components/widget/ChatWidget.svelte";
---

<MainGridLayout title="AI 聊天">
  <div class="w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
    <div class="card-base z-10 px-6 py-6 relative w-full">
      <h1 class="text-3xl font-bold mb-4">AI 聊天</h1>
      <div class="prose mb-6">
            <p class="chat-intro">在这里与 AI 聊天，由 Cloudflare AI 提供技术支持。</p>
      </div>

          <style is:inline>
            /* Make the intro paragraph use the same text color as chat input */
            .chat-intro { color: var(--text-foreground); }
          </style>

      <!-- 使用 Svelte 组件并在客户端加载 -->
      <ChatWidget client:load />
    </div>
  </div>
</MainGridLayout>
